<!DOCTYPE codename-engine-dialogue-box>
<dialoguebox scale="0.9" y="100">
    <!-- All positions for the dialogue box -->
    <charpos name="left" x="-500" y="0" />
    <charpos name="middle" x="0" y="0" />
    <charpos name="right" x="500" y="0" flipBubble="true" />

    <!--
        All animations for the dialogue box
        For example, if you wanna add an "angry" animation, add an animation named "angry" (box idle), and "angry-open" (not needed, for box apparition)
     -->
    <anim name="normal" anim="speech bubble normal" fps="24" loop="true"/>
    <anim name="normal-open" anim="Speech Bubble Normal Open" fps="24" />

    <anim name="angry" anim="AHH speech bubble" fps="24" loop="true"/>
    <anim name="angry-open" anim="speech bubble loud open" fps="24" />
</dialoguebox>