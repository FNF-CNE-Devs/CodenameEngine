<theme folder="desktop/ui/">
    <!-- WINDOW!! !-->
    <captionActive      path="caption"          textColor="255,255,255" left="5" top="30" right="5" bottom="5" />
    <captionInactive    path="captionInactive"  textColor="216,228,248" left="5" top="30" right="5" bottom="5" />
    <captionButtons     path="captionButtons"   size="21,21" margin="2,0" offset="4,6" />

    <!-- BUTTONS !-->
    <normalButton       path="button"           textColor="0,0,0"       left="4" top="4" right="4" bottom="4" />
    <hoverButton        path="buttonHover"      textColor="0,0,0"       left="4" top="4" right="4" bottom="4" />
    <pressedButton      path="buttonPressed"    textColor="0,0,0"       left="4" top="4" right="4" bottom="4" />
    <disabledButton     path="buttonDisabled"   textColor="128,128,128" left="4" top="4" right="4" bottom="4" />

    <!-- TEXT !-->
    <text font="%WinDir%/fonts/tahoma.ttf" size="11"/>
</theme>